<!DOCTYPE html>
<html>
<head>
    <title>이미지 슬라이더</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        (function ($) {
            $.fn.imageSlider = function (options) {
                // 기본 옵션
                const settings = $.extend({
                    width: 460,
                    height: 300,
                    interval: 3000
                }, options);

                const moveTo = function () {
                    $('.images').animate({
                        left: -current * settings.width
                    }, 1000);
                };

                let current = 0;
                const imageLength = $('.slider').find('.image').length;

                for (let i = 0; i < imageLength; i++) {
                    $('<button></button>')
                        .attr('data-position', i)
                        .text(i)
                        .click(function () {
                            current = $(this).attr('data-position');
                            moveTo();
                        })
                        .insertBefore('.slider');
                }

                $('.slider').css({
                    position: 'relative',
                    width: settings.width,
                    height: settings.height,
                    overflow: 'hidden'
                });

                $('.images').css({
                    position: 'absolute',
                    width: settings.width * imageLength,
                });

                $('.image').css({
                    margin: 0,
                    padding: 0,
                    width: settings.width,
                    height: settings.height,
                    display: 'block',
                    float: 'left'
                });

                setInterval(function () {
                    current = (current + 1) % imageLength;
                    moveTo();
                }, settings.interval);

                return this;
            };
        })(jQuery);

        $(document).ready(function () {
            $('.slider').imageSlider({
                width: 460,
                height: 300,
                interval: 3000
            });
        });
    </script>
</head>
<body>
    <div class="slider">
        <div class="images">
            <img class="image" src="https://via.placeholder.com/460x300?text=image-0" />
            <img class="image" src="https://via.placeholder.com/460x300?text=image-1" />
            <img class="image" src="https://via.placeholder.com/460x300?text=image-2" />
            <img class="image" src="https://via.placeholder.com/460x300?text=image-3" />
            <div class="image">
                <h1>이미지가 아닌 것</h1>
                <p>Lorem ipsum dolor sit amet.</p>
            </div>
        </div>
    </div>
</body>
</html>
